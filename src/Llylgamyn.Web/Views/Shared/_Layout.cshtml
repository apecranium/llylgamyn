<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Llylgamyn</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">Home</a> |
            <a asp-controller="Tavern" asp-action="Index">Tavern</a> |
            <a asp-controller="Quests" asp-action="Index">Quests</a> |
            <a asp-controller="Account" asp-action="Login">Sign In</a> |
            <a asp-controller="Account" asp-action="Register">Register</a>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>&copy; @DateTime.Now.Year Llylgamyn | <a asp-controller="Home" asp-action="Privacy">Privacy</a></p>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
